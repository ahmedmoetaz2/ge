<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.EventListController"
      prefWidth="800" prefHeight="600" spacing="10" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
    <Label text="Liste des événements" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- Table des événements -->
    <TableView fx:id="eventTable" prefWidth="760" prefHeight="400" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="ID" fx:id="idColumn" prefWidth="50" />
            <TableColumn text="Nom" fx:id="nameColumn" prefWidth="150" />
            <TableColumn text="Catégorie" fx:id="categoryColumn" prefWidth="100" />
            <TableColumn text="Date début" fx:id="dateDColumn" prefWidth="100" />
            <TableColumn text="Date fin" fx:id="dateFColumn" prefWidth="100" />
            <TableColumn text="Prix" fx:id="priceColumn" prefWidth="80" />
            <TableColumn text="Workshops" fx:id="workshopsColumn" prefWidth="150" />
            <TableColumn text="Nb workshops" fx:id="nbWorkshopsColumn" prefWidth="80" />
        </columns>
    </TableView>

    <!-- Boutons d'action -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Ajouter" onAction="#handleAddEvent" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Button text="Modifier" onAction="#handleEditEvent" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
        <Button text="Supprimer" onAction="#handleDeleteEvent" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
    </HBox>
</VBox>